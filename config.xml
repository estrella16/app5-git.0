<?xml version="1.0" encoding="UTF-8"?> 

<widget xmlns="http://www.w3.org/ns/wigets"
xmlns:gap="http://phonegap.com/ns/1.0"
id="com.phonegap.example5"
version="1.0.0">

<name>app5 advertencias del dispositivo</name>

<description>
Aplicacion muestra las advertencias del dispositivo
</description>

<author href="https://build.phonegap.com" email="ramirez.luis.cbtis16@gmail.com">
luis angel ramirez flores 4 g
</author>

<!--personaliza la aplicacion plataforma -->
<preference name="orientation"      value="default" />
<!--<preference name="orientation"     value="portraint" />
<preference name="orientation"      value="landscape" />-->
<preference name="target-device"     value="universal" />
<preference name="fullscreen"      value="true"/>
<preference name="android-installLocation" value="auto" />
<preference name="permissions" value="INTERNET"/>

<!--plugins-->
<!--core plugins-->
<plugin name="cordova-plugin-device" spec="~1.1.4"/>
<plugin name="cordova-plugin-vibration" spec="~2.1.3"/>
<plugin name="cordova-plugin-dialogs" spec="~1.3.1"/>

<!-- <plugin name="cordova-plugin-geolocalitation" source="npm"/>-->
<!-- Third party plugins -->

<!--colocar icono app -->
 
 <icon src="res/android/mdpi.png"/>
 
 
 <!-- para accesar a paginas en internet-->
 <allow-intent href="https://*/*"/>
 <acces origin="https://*/*"/>
 <allow-intent href="http://*/*"/>
 <acces origin="http://*/*"/>
 <plugin name="cordova-plugin-whitelist" source="npm"/>
 
 
 </widget>

